---
import "../styles/global.css";
// Supports weights 300-600
import "@fontsource/outfit/300.css";
import "@fontsource/outfit/400.css";
import "@fontsource/outfit/600.css";

// Supports weights 400-600
import "@fontsource/playfair-display/400.css";
import "@fontsource/playfair-display/600.css";
import "@fontsource/playfair-display/400-italic.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CookieBanner from "../components/CookieBanner.astro";

import {
  getLangFromUrl,
  useTranslations,
  getAlternateLinks,
  type Locale,
} from "../i18n";

interface Props {
  title?: string;
  description?: string;
  theme?: "light" | "dark";
}

// Get current locale from URL
const currentLang = getLangFromUrl(Astro.url) as Locale;
const t = useTranslations(currentLang);

const {
  title = t.meta.title,
  description = t.meta.description,
  theme = "dark", // Default to dark for Home
} = Astro.props;

// Determine background and text classes based on theme
const themeClasses =
  theme === "dark"
    ? "bg-corporate-gradient text-white"
    : "bg-white text-surface theme-light"; // Added theme-light class for CSS targeting

// Check if we're on the home page (considering localized paths)
const pathname = Astro.url.pathname;
const isHome =
  pathname === "/" ||
  pathname === "/en" ||
  pathname === "/en/" ||
  pathname === "/de" ||
  pathname === "/de/";

// Get alternate language links for SEO
const alternateLinks = getAlternateLinks(pathname, "https://cieasesoria.com");
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Tag Manager -->
    <Fragment
      set:html={`<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);})(window,document,'script','dataLayer','GTM-WBWPKDM');</script>`}
    />
    <!-- End Google Tag Manager -->

    <!-- SEO keywords & author -->
    <meta name="keywords" content={t.meta.keywords} />
    <meta name="author" content="CIE Asesoría" />
    <link
      rel="canonical"
      href={new URL(Astro.url.pathname, "https://cieasesoria.com")}
    />

    <!-- Alternate language links for SEO -->
    {
      alternateLinks.map(({ locale, href }) => (
        <link rel="alternate" hreflang={locale} href={href} />
      ))
    }
    <link
      rel="alternate"
      hreflang="x-default"
      href="https://cieasesoria.com/"
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://cieasesoria.com/assets/og-image.jpg"
    />
    <meta
      property="og:locale"
      content={currentLang === "es"
        ? "es_ES"
        : currentLang === "de"
          ? "de_DE"
          : "en_GB"}
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content="https://cieasesoria.com/assets/og-image.jpg"
    />

    <!-- JSON-LD Structured Data (Local Business) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "AccountingService",
        "name": "CIE Asesoría",
        "image": "https://cieasesoria.com/assets/white-logo-no-background.svg",
        "@id": "https://cieasesoria.com",
        "url": "https://cieasesoria.com",
        "telephone": "+34928948264",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Avda. Constitución, 3 planta 1 pta 4",
          "addressLocality": "Gran Tarajal",
          "addressRegion": "Las Palmas",
          "postalCode": "35620",
          "addressCountry": "ES"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 28.21,
          "longitude": -14.02
        },
        "priceRange": "€€",
        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "09:00",
          "closes": "17:00"
        }
      }
    </script>

    <title>{title}</title>
  </head>
  <body
    class={`${themeClasses} ${isHome ? "is-home" : ""} font-sans min-h-screen flex flex-col overflow-x-hidden`}
  >
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-WBWPKDM"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->

    <!-- Accessibility: Skip to Content -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-white focus:text-primary focus:font-bold focus:shadow-xl focus:rounded pointer-events-none focus:pointer-events-auto"
    >
      {t.accessibility.skipToContent}
    </a>

    <Header theme={theme} lang={currentLang} />

    <main id="main-content">
      <slot />
    </main>

    <Footer lang={currentLang} />
    <CookieBanner lang={currentLang} />
  </body>
</html>
