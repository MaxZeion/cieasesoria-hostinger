---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const newsEntries = await getCollection("news");
    return newsEntries.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} - CIE Asesoría`} theme="light">
    <main
        id="main-content"
        class="flex-1 w-full max-w-[900px] mx-auto p-4 md:p-8"
    >
        <!-- Article Header -->
        <header class="mb-12 text-center animate-[fadeInUp_0.8s_ease-out]">
            <div
                class="inline-block mb-4 px-3 py-1 border border-brand/30 rounded-full bg-brand/5 text-brand text-xs font-semibold uppercase tracking-wider"
            >
                {
                    entry.data.date.toLocaleDateString("es-ES", {
                        weekday: "long",
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                    })
                }
            </div>

            <h1
                class="font-serif text-[2rem] md:text-[3rem] font-bold text-surface leading-tight mb-6"
            >
                {entry.data.title}
            </h1>

            <div
                class="flex items-center justify-center gap-2 text-sm text-gray-500"
            >
                <span class="text-brand">✎</span>
                <span>{entry.data.author}</span>
            </div>
        </header>

        <!-- Decorative Spacer -->
        <div
            class="w-full max-w-[200px] mx-auto h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent mb-12"
        >
        </div>

        <!-- Content -->
        <article
            class="prose prose-lg mx-auto max-w-none
                    prose-p:font-light prose-p:leading-8 prose-p:text-gray-700
                    prose-headings:font-serif prose-headings:font-bold prose-headings:text-surface
                    prose-li:text-gray-700 bg-white p-8 md:p-12 rounded-lg shadow-sm border border-gray-50"
        >
            <Content />
        </article>

        <!-- Back Button -->
        <div class="mt-16 pt-8 border-t border-gray-200 text-center">
            <a
                href="/news"
                class="inline-flex items-center gap-2 text-surface hover:text-brand transition-colors font-medium"
            >
                ← Volver a Noticias
            </a>
        </div>
    </main>
</Layout>
