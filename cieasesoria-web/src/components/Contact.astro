---
import { Mail, ShieldAlert } from "lucide-astro";

// Get reCAPTCHA site key from environment
const recaptchaSiteKey = import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY || "";
---

<section id="contacto" class="py-20 px-8 bg-white text-surface">
    <div class="max-w-[1200px] mx-auto">
        <div class="text-center mb-16">
            <h2 class="font-serif text-4xl font-bold text-surface mb-4">
                Hablemos de tu Proyecto
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                Estamos listos para resolver tus dudas. Completa el formulario y
                envía tu consulta.
            </p>
        </div>

        <div
            class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-20 items-start"
        >
            <!-- Contact Info -->
            <div class="flex flex-col gap-8">
                <div class="bg-gray-50 p-8 rounded-2xl border border-gray-100">
                    <h3
                        class="font-serif text-2xl font-bold mb-6 text-brand-dark"
                    >
                        Información de Contacto
                    </h3>

                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <div
                                class="p-3 bg-white rounded-lg text-brand shadow-sm"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><path
                                        d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                                    ></path></svg
                                >
                            </div>
                            <div>
                                <p class="font-bold text-surface">Teléfono</p>
                                <a
                                    href="tel:928948264"
                                    class="text-gray-600 hover:text-brand transition-colors"
                                    >928 94 82 64</a
                                >
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div
                                class="p-3 bg-white rounded-lg text-brand shadow-sm"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><rect
                                        width="20"
                                        height="16"
                                        x="2"
                                        y="4"
                                        rx="2"></rect><path
                                        d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                                    ></path></svg
                                >
                            </div>
                            <div>
                                <p class="font-bold text-surface">Email</p>
                                <a
                                    href="mailto:cieasesoria@gmail.com"
                                    class="text-gray-600 hover:text-brand transition-colors"
                                    >cieasesoria@gmail.com</a
                                >
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div
                                class="p-3 bg-white rounded-lg text-brand shadow-sm"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><path
                                        d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                                    ></path><circle cx="12" cy="10" r="3"
                                    ></circle></svg
                                >
                            </div>
                            <div>
                                <p class="font-bold text-surface">Oficina</p>
                                <p class="text-gray-600">
                                    Avda. de la Constitución, 3<br />Planta 1,
                                    Puerta 4<br />35620 Gran Tarajal, Las Palmas
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <form
                id="contact-form"
                action="/api/contact"
                method="POST"
                class="bg-white p-8 rounded-2xl shadow-lg border border-gray-100 flex flex-col gap-6"
            >
                <!-- Success/Error Messages -->
                <div
                    id="form-message"
                    class="hidden p-4 rounded-lg text-center font-medium"
                >
                </div>

                <!-- Hidden reCAPTCHA token field -->
                <input
                    type="hidden"
                    id="recaptcha-token"
                    name="recaptcha_token"
                />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="flex flex-col gap-2">
                        <label
                            for="nombre"
                            class="font-medium text-sm text-gray-700"
                            >Nombre completo</label
                        >
                        <input
                            type="text"
                            id="nombre"
                            name="nombre"
                            required
                            placeholder="Tu nombre"
                            class="px-4 py-3 rounded-lg border border-gray-200 focus:border-brand focus:ring-2 focus:ring-brand/20 outline-none transition-all"
                        />
                    </div>
                    <div class="flex flex-col gap-2">
                        <label
                            for="telefono"
                            class="font-medium text-sm text-gray-700"
                            >Teléfono</label
                        >
                        <input
                            type="tel"
                            id="telefono"
                            name="telefono"
                            placeholder="Tu teléfono"
                            class="px-4 py-3 rounded-lg border border-gray-200 focus:border-brand focus:ring-2 focus:ring-brand/20 outline-none transition-all"
                        />
                    </div>
                </div>

                <div class="flex flex-col gap-2">
                    <label for="email" class="font-medium text-sm text-gray-700"
                        >Correo electrónico</label
                    >
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        placeholder="tucorreo@ejemplo.com"
                        class="px-4 py-3 rounded-lg border border-gray-200 focus:border-brand focus:ring-2 focus:ring-brand/20 outline-none transition-all"
                    />
                </div>

                <div class="flex flex-col gap-2">
                    <label
                        for="mensaje"
                        class="font-medium text-sm text-gray-700">Mensaje</label
                    >
                    <textarea
                        id="mensaje"
                        name="mensaje"
                        rows="4"
                        required
                        placeholder="¿En qué podemos ayudarte?"
                        class="px-4 py-3 rounded-lg border border-gray-200 focus:border-brand focus:ring-2 focus:ring-brand/20 outline-none transition-all resize-none"
                    ></textarea>
                </div>

                <div class="flex items-start gap-3">
                    <input
                        type="checkbox"
                        id="privacidad"
                        name="privacidad"
                        required
                        value="accepted"
                        class="mt-1 w-4 h-4 text-brand rounded border-gray-300 focus:ring-brand"
                    />
                    <label for="privacidad" class="text-sm text-gray-500">
                        He leído y acepto la <a
                            href="/legal/privacidad"
                            class="text-brand hover:underline"
                            >política de privacidad</a
                        > y autorizo el tratamiento de mis datos para responder a
                        esta consulta.
                    </label>
                </div>

                <button
                    type="submit"
                    id="submit-btn"
                    class="mt-2 w-full px-8 py-4 bg-brand text-white font-bold rounded-lg shadow-lg hover:bg-brand-dark hover:-translate-y-1 transition-all duration-300 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
                >
                    <span id="btn-text">Enviar Mensaje</span>
                    <span id="btn-loading" class="hidden">
                        <svg
                            class="animate-spin inline-block w-5 h-5 mr-2"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                        >
                            <circle
                                class="opacity-25"
                                cx="12"
                                cy="12"
                                r="10"
                                stroke="currentColor"
                                stroke-width="4"></circle>
                            <path
                                class="opacity-75"
                                fill="currentColor"
                                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                            ></path>
                        </svg>
                        Enviando...
                    </span>
                </button>

                <!-- reCAPTCHA v3 branding (required by Google) -->
                <p class="text-xs text-gray-400 text-center">
                    Este sitio está protegido por reCAPTCHA y aplican la
                    <a
                        href="https://policies.google.com/privacy"
                        class="underline hover:text-gray-600"
                        target="_blank"
                        rel="noopener">Política de Privacidad</a
                    > y
                    <a
                        href="https://policies.google.com/terms"
                        class="underline hover:text-gray-600"
                        target="_blank"
                        rel="noopener">Términos de Servicio</a
                    > de Google.
                </p>
            </form>
        </div>
    </div>
</section>

<!-- reCAPTCHA v3 Script -->
<script is:inline define:vars={{ siteKey: recaptchaSiteKey }}>
    // Store site key in window for form script
    window.RECAPTCHA_SITE_KEY = siteKey;

    // Load reCAPTCHA script dynamically
    if (siteKey) {
        const script = document.createElement("script");
        script.src = `https://www.google.com/recaptcha/api.js?render=${siteKey}`;
        script.async = true;
        document.head.appendChild(script);
    }
</script>

<script>
    const form = document.getElementById("contact-form") as HTMLFormElement;
    const submitBtn = document.getElementById(
        "submit-btn",
    ) as HTMLButtonElement;
    const btnText = document.getElementById("btn-text") as HTMLSpanElement;
    const btnLoading = document.getElementById(
        "btn-loading",
    ) as HTMLSpanElement;
    const formMessage = document.getElementById(
        "form-message",
    ) as HTMLDivElement;
    const recaptchaTokenInput = document.getElementById(
        "recaptcha-token",
    ) as HTMLInputElement;

    // Get site key from the inline script or window
    const siteKey = (window as any).RECAPTCHA_SITE_KEY || "";

    form.addEventListener("submit", async (e) => {
        e.preventDefault();

        // Hide previous messages
        formMessage.classList.add("hidden");

        // Show loading state
        submitBtn.disabled = true;
        btnText.classList.add("hidden");
        btnLoading.classList.remove("hidden");

        try {
            // Get reCAPTCHA token if available
            if (typeof (window as any).grecaptcha !== "undefined" && siteKey) {
                try {
                    const grecaptcha = (window as any).grecaptcha;
                    await new Promise<void>((resolve) => {
                        grecaptcha.ready(() => resolve());
                    });
                    const token = await grecaptcha.execute(siteKey, {
                        action: "contact_form",
                    });
                    recaptchaTokenInput.value = token;
                } catch (recaptchaError) {
                    console.warn("reCAPTCHA error:", recaptchaError);
                    // Continue without reCAPTCHA token
                }
            }

            const formData = new FormData(form);

            const response = await fetch("/api/contact", {
                method: "POST",
                body: formData,
            });

            const result = await response.json();

            if (result.success) {
                // Success
                formMessage.textContent = result.message;
                formMessage.className =
                    "p-4 rounded-lg text-center font-medium bg-green-100 text-green-800 border border-green-200";
                formMessage.classList.remove("hidden");
                form.reset();
            } else {
                // Error from server
                formMessage.textContent = result.error;
                formMessage.className =
                    "p-4 rounded-lg text-center font-medium bg-red-100 text-red-800 border border-red-200";
                formMessage.classList.remove("hidden");
            }
        } catch (error) {
            // Network error
            formMessage.textContent =
                "Error de conexión. Por favor, inténtalo de nuevo.";
            formMessage.className =
                "p-4 rounded-lg text-center font-medium bg-red-100 text-red-800 border border-red-200";
            formMessage.classList.remove("hidden");
        } finally {
            // Reset button state
            submitBtn.disabled = false;
            btnText.classList.remove("hidden");
            btnLoading.classList.add("hidden");
        }
    });
</script>
