---
import { useTranslations, type Locale } from "../i18n";

interface Props {
    lang?: Locale;
}

const { lang = "es" } = Astro.props;
const t = useTranslations(lang);
---

<section
    class="py-4 md:py-10 bg-white border-b border-gray-100 relative z-20 mt-4 md:-mt-8 mx-4 md:mx-auto max-w-[1200px] rounded-2xl shadow-xl"
>
    <div
        class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-8 text-center divide-y md:divide-y-0 md:divide-x divide-gray-100"
    >
        <div class="px-2 py-1 md:px-4 md:py-2 group cursor-default">
            <span
                class="block text-2xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-brand to-brand-dark mb-1 md:mb-2 group-hover:scale-110 transition-transform duration-300"
            >
                +20
            </span>
            <span
                class="text-xs md:text-sm font-bold tracking-widest text-gray-600 uppercase"
                >{t.stats.years}</span
            >
        </div>

        <div class="px-2 py-1 md:px-4 md:py-2 group cursor-default">
            <span
                class="block text-2xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-brand to-brand-dark mb-1 md:mb-2 group-hover:scale-110 transition-transform duration-300 delay-100"
            >
                +200
            </span>
            <span
                class="text-xs md:text-sm font-bold tracking-widest text-gray-600 uppercase"
                >{t.stats.companies}</span
            >
        </div>

        <div class="px-2 py-1 md:px-4 md:py-2 group cursor-default">
            <!-- Using an icon styling or just text for the third stat to mix it up, keeping numbers for consistency -->
            <span
                class="block text-2xl md:text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-brand to-brand-dark mb-1 md:mb-2 group-hover:scale-110 transition-transform duration-300 delay-200"
            >
                100%
            </span>
            <span
                class="text-xs md:text-sm font-bold tracking-widest text-gray-600 uppercase"
                >{t.stats.support}</span
            >
        </div>
    </div>
</section>
