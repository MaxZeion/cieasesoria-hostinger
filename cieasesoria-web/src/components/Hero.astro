<section class="min-h-screen flex justify-center items-center p-8 w-full bg-corporate-gradient text-white relative overflow-hidden">
    <div class="flex flex-col items-center text-center gap-12 max-w-[900px] w-full z-10">
        <!-- Logo Section -->
        <div class="w-full flex justify-center animate-[scaleIn_1.2s_ease-out]">
            <img src="/assets/white-logo-no-background.svg" alt="CIE Asesoría Logo" class="w-3/4 max-w-[700px] h-auto drop-shadow-[0_0_20px_rgba(255,255,255,0.1)]">
        </div>

        <!-- Info Section -->
        <div class="flex flex-col gap-6 max-w-[700px] w-full animate-[fadeInUp_1s_ease-out_0.3s_backwards]">
            <h1 class="font-serif text-[2rem] md:text-[2.2rem] font-bold leading-[1.2] text-brand">Asesoría Laboral, Fiscal y Contable online en Canarias</h1>
            <p class="font-serif text-[1.1rem] leading-relaxed font-normal">
                Experiencia, tecnología y cercanía al servicio de tu empresa.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center mt-4">
                 <a href="#contacto" class="px-8 py-3 bg-brand text-surface font-bold rounded-full shadow-lg hover:bg-white hover:scale-105 transition-all duration-300">
                    Contactar Ahora
                </a>
                <a href="#servicios" class="px-8 py-3 border-2 border-white/30 text-white font-medium rounded-full hover:bg-white/10 hover:border-white hover:scale-105 transition-all duration-300">
                    Nuestros Servicios
                </a>
            </div>
        </div>
    </div>
    
    <!-- Decorator -->
    <div class="absolute bottom-0 left-0 w-full h-24 bg-gradient-to-t from-white to-transparent opacity-10"></div>
</section>

<style>
    @keyframes scaleIn {
        from { opacity: 0; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1); }
    }
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
